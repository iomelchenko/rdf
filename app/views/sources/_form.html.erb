  <div class="control-group">
    <%= f.label :Object_type, :class => 'control-label' %><br />
   <div class="controls"> 

     <%= text_field :type, :title %>

   </div>
 </div>

 <div class="control-group"> 
    <%= f.label :Description, :class => 'control-label' %><br />
   <div class="controls">   
    <%= f.text_field :description, :class => 'text_field' %>
   </div>    
  </p>
 </div>

 <div class="control-group">
    <%= f.label :SourceName, :class => 'control-label' %><br />
   <div class="controls"> 

    <%= f.collection_select(:name, StgSource.find(:all), :name, :name, {}, {:multiple => true, :size => 10} ) %>

   </div>
 </div>

 <div class="control-group">
    <%= f.label :Filter, :class => 'control-label' %><br />
   <div class="controls"> 

     <%= text_field :filter, :title %>

   </div>
 </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
